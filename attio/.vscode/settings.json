{
    // 隐藏Python缓存目录
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/*.pyo": true,
        "**/*.pyd": true,
        "**/.Python": true,
        "**/pip-log.txt": true,
        "**/pip-delete-this-directory.txt": true,
        "**/.pytest_cache": true,
        "**/.coverage": true,
        "**/htmlcov": true,
        "**/.tox": true,
        "**/.venv": true,
        "**/venv": true,
        "**/env": true,
        "**/.env": true,
        "**/.mypy_cache": true,
        "**/.dmypy.json": true,
        "**/dmypy.json": true
    },
    // Python相关设置
    "python.defaultInterpreterPath": "python3",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length",
        "88"
    ],
    // 文件关联
    "files.associations": {
        "*.py": "python"
    },
    // 编辑器设置
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    // 搜索排除
    "search.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/node_modules": true,
        "**/.git": true
    },
    // 文件监视排除
    "files.watcherExclude": {
        "**/__pycache__/**": true,
        "**/*.pyc": true,
        "**/node_modules/**": true,
        "**/.git/**": true
    }
}

